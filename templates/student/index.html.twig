{% extends 'menu-layout.html.twig' %}

{% block content %}
<div class="row g-4 row-cols-1 row-cols-lg-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home.index') }}">Acceuil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Étudiants</li>
        </ol>
    </nav>
</div>
<div class="row g-4 row-cols-1 row-cols-lg-5 justify-content-md-end">
    <a class="btn btn-success btn-sm" href="{{ path('student.create')}}" role="button">Créer un étudiant</a>
</div>
<div class="row g-4 row-cols-1 row-cols-lg-5">
    <table class="table table-hover table-striped ">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Sexe</th>
            <th scope="col">Classe</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
        {% for student in students %}
            <tr>
                <th scope="row">{{ student.id}}</th>
                <td>{{ student.Nom }}</td>
                <td>{{ student.Prenom }}</td>
                <td>{{ student.Sexe }}</td>
                <td>{{ student.Class.Ident }}</td>
                <td></td>
                <td width="150px">
                    <a class="btn btn-primary btn-sm" href="{{ path('student.detail',{'id': student.id}) }}" role="button"><i class="bi bi-eye-fill"></i></a>
                    <a class="btn btn-success btn-sm" href="{{ path('student.edit',{'id': student.id}) }}" role="button"><i class="bi bi-pencil-fill"></i></a>
                    <a class="btn btn-danger btn-sm" href="{{ path('student.delete',{'id': student.id}) }}" role="button"><i class="bi bi-trash-fill"></i></a>            
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% include 'shared/flash.html.twig' %}

{% endblock %}
